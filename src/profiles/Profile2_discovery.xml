<?xml version="1.0" encoding="UTF-8"?>
<p:profile xmlns:p="http://xmlProfile.de" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlProfile.de Profile2.xsd" class="sml:PhysicalSystem">


	<p:elementString XPath="gml:description" ID="description">
		<p:input>
			<p:textField />
		</p:input>
	</p:elementString>

	<p:elementGroup groupID="Identification" XPath="sml:Identification/sml:IdentifierList">
		<p:elements>
			<p:elementGroup groupRef="shortName"
				XPath="sml:Identification/sml:IdentifierList/sml:Identifier/sml:Term" />
		</p:elements>
	</p:elementGroup>

	<p:elementGroup groupID="shortName"
		XPath="sml:Identification/sml:IdentifierList/sml:Identifier/sml:Term">
		<p:elements>
			<p:elementString XPath="sml:label" ID="name_shortName">
				<p:restrictions>
					<p:fixContent>
						<p:value>Short name</p:value>
					</p:fixContent>
				</p:restrictions>
				<p:input>
					<p:textField hide="true"/>
				</p:input>
			</p:elementString>
			<p:elementString XPath="@definition" ID="definition_shortName">
				<p:restrictions>
					<p:fixContent>
						<p:value>urn:ogc:def:Identifier:OGC:1.0:shortName</p:value>
					</p:fixContent>
				</p:restrictions>
			</p:elementString>
			<p:elementString XPath="swe:value" ID="value_shortName">
				<p:label>Short name (swe:value)</p:label>
				<p:input>
					<p:textField />
				</p:input>
			</p:elementString>
		</p:elements>
	</p:elementGroup>

	<p:formConfiguration>
		<p:formComponent label="Form">
			<p:element ref="description" />
			<p:formComponent label="Identification">
				<p:elementGroup groupRef="Identification" />
			</p:formComponent>
		</p:formComponent>
	</p:formConfiguration>
</p:profile>
